<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/list_selector"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:contentDescription="@string/desc_list_item_icon"
        android:src="@drawable/ic_white_home"
        android:layout_centerVertical="true"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/image"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/nama_akun"
            android:text="Nama Saya"
            android:textSize="@dimen/nama_akun_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/list_item_title"
            android:layout_marginBottom="5dp"/>

        <TextView
        android:id="@+id/role_akun"
        android:text="Role Saya"
        android:textSize="@dimen/role_akun_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/list_item_title"/>

    </LinearLayout>

</RelativeLayout><!-- From: file:/home/farhan/android-project/kakakuh/app/src/main/res/layout/list_item_akun_koordinator.xml -->
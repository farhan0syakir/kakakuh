<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/white"
    tools:context="com.kakakuh.c4ppl.kakakuh.PengaturanUbahPasswordActivity">

    <ScrollView
        android:orientation="vertical"
        android:id="@+id/scrollview"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:isScrollContainer="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView
                android:id="@+id/label_password_sekarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_password_sekarang"
                android:textSize="@dimen/normal_text"
                android:layout_alignLeft="@+id/password_sekarang"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/password_sekarang"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="@dimen/normal_text"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/label_password_sekarang"
                android:layout_marginTop="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/square_text_box"/>

            <TextView
                android:id="@+id/label_password_baru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_password_baru"
                android:textSize="@dimen/normal_text"
                android:layout_alignLeft="@+id/password_baru"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/password_sekarang"/>

            <EditText
                android:id="@+id/password_baru"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="@dimen/normal_text"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/label_password_baru"
                android:layout_marginTop="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/square_text_box"/>

            <TextView
                android:id="@+id/label_konfirmasi_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_konfirmasi_password"
                android:textSize="@dimen/normal_text"
                android:layout_alignLeft="@+id/konfirmasi_password"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/password_baru"/>

            <EditText
                android:id="@+id/konfirmasi_password"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="@dimen/normal_text"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/label_konfirmasi_password"
                android:layout_marginTop="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/square_text_box"/>

            <Button
                android:id="@+id/btn_simpan"
                android:text="@id/btn_simpan_label"
                android:textSize="@dimen/normal_text"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/konfirmasi_password"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btn_normal"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:contentDescription="@string/btn_login"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout><!-- From: file:/home/farhan/android-project/kakakuh/app/src/main/res/layout-normal/activity_pengaturan_ubah_password.xml -->
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/emerald_light">

    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/header"
            android:layout_toLeftOf="@+id/btn_edit"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="DASAR DASAR PEMPROGRAMAN"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_edit"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_delete"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_edit_selector"
            android:contentDescription="@string/button"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_delete_selector"
            android:contentDescription="@string/button"/>

    </RelativeLayout>

    <TextView
        android:layout_below="@id/linear"
        android:id="@+id/deadline"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:text="28 Mei 2015 09:00"
        android:background="@color/cloud"
        android:paddingLeft="10dp"/>
</RelativeLayout><!-- From: file:/C:/Users/Anas/Documents/GitHub/kakakuh/app/src/main/res/layout-normal/header_tugas_kakak.xml -->
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:orientation="vertical"
        android:id="@+id/scrollview"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:isScrollContainer="true">

        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/container"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView
                android:id="@+id/label_kakak_asuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_kakak_asuh"
                android:textSize="@dimen/normal_text"
                android:layout_marginTop="70dp"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/kakak_asuh" />

            <AutoCompleteTextView
                android:id="@+id/kakak_asuh"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/label_kakak_asuh"
                android:textSize="@dimen/normal_text"
                android:layout_marginTop="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/square_text_box"
                android:inputType="textNoSuggestions"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/art_pasangkan_akun"
                android:layout_below="@+id/kakak_asuh"
                android:layout_marginTop="30dp"
                android:id="@+id/pasangkan_art"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/label_adik_asuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_adik_asuh"
                android:textSize="@dimen/normal_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/pasangkan_art"
                android:layout_alignLeft="@+id/adik_asuh"/>

            <AutoCompleteTextView
                android:id="@+id/adik_asuh"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_text"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/label_adik_asuh"
                android:layout_marginTop="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/square_text_box"
                android:inputType="textNoSuggestions"/>

            <Button
                android:id="@+id/btn_pasang"
                android:text="@string/btn_pasang"
                android:textSize="@dimen/normal_text"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/adik_asuh"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btn_normal"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:contentDescription="@string/button" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout><!-- From: file:/C:/Users/Anas/Documents/GitHub/kakakuh/app/src/main/res/layout-normal/fragment_pasangkan_akun.xml -->
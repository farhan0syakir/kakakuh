<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/emerald_light"
    android:layout_marginTop="10dp">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PPL"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/header"
        android:id="@+id/deadline"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:text="28 Mei 2015 09:00"
        android:background="@color/cloud"
        android:paddingLeft="10dp"/>
</RelativeLayout><!-- From: file:/home/farhan/android-project/kakakuh/app/src/main/res/layout-normal/header_tugas.xml -->
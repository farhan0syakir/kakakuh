<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kakakuh.c4ppl.kakakuh"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
 <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
 <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >

        <!-- Default Activity -->
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.LauncherActivity"
            android:label="@string/app_name"
            android:theme="@style/notitle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>

        <!-- Login Activity -->
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.LoginActivity"
            android:theme="@style/notitle"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>

        <!-- Pesan Activity -->
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.PesanActivity"
            android:label="@string/pesan" >
        </activity>
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.PesanBaruActivity"
            android:label="@string/kirim_pesan" >
        </activity>
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.DetailPesanActivity"
            android:label="@string/pesan" >
        </activity>

        <!-- Pengaturan Activity -->
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.PengaturanUbahPasswordActivity"
            android:label="@string/title_activity_pengaturan_otentikasi"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.UbahProfilActivity"
            android:label="@string/title_activity_ubah_profil"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.PengaturanPesanActivity"
            android:label="@string/title_activity_pengaturan_pesan" >
        </activity>
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.PengaturanPengingatActivity"
            android:label="@string/title_activity_pengaturan_reminder" >
        </activity>
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.PengaturanDaftarPasanganActivity"
            android:label="@string/title_activity_pengaturan_list" >
        </activity>
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.PengaturanReviewLogActivity"
            android:label="@string/title_activity_pengaturan_review_log" >
        </activity>
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.DetailLogActivity"
            android:label="@string/title_activity_detail_log" >
        </activity>

        <!-- Profil Activity -->
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.ProfilActivity"
            android:label="@string/title_activity_profil" >
        </activity>
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.ProfilAboutActivity"
            android:label="@string/title_activity_profil" >
        </activity>
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.ProfilLogActivity"
            android:label="@string/title_activity_profil" >
        </activity>

        <!-- TugasActivity -->
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.DetailTugasActivity"
            android:label="@string/title_activity_detail_tugas" >
        </activity>
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.TambahTugasActivity"
            android:label="@string/title_activity_tambah_tugas" >
        </activity>
        <activity
            android:name="com.kakakuh.c4ppl.kakakuh.KerjakanTugasActivity"
            android:label="@string/title_activity_kerjakan_tugas" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>